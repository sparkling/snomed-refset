<section class="members">
  <!-- TABLE FILTER -->
  <div class="row filter">
    <!-- TEXT -->
    <div class="small-6 columns text">      
      <input type="text" placeholder="Filter"></input>
    </div>
    <!-- BOOLEAN -->
    <div class="small-6 columns show">
      {{input type="checkbox" name="showComponent" checked=showComponent id="show-component"}}<label for="show-component">Component</label>    
      {{input type="checkbox" name="showIdentifier" checked=showIdentifier id="show-id"}}<label for="show-id">Identifier</label>
      {{input type="checkbox" name="showEffective" checked=showEffective id="show-effective"}}<label for="show-effective">Effective</label>
      {{input type="checkbox" name="showModule" checked=showModule id="show-module"}}<label for="show-module">Module</label>
    </div>
  </div>

  <!-- TABLE -->
  <div class="row">
    <div class="large-12 columns">
      <table width="100%" cellpadding="0" cellspacing="0" class="responsive">
        <thead>
          <tr>
            {{#if controller.showIdentifier}}
            <th>Identifier
              <a style="margin-left: 0.75em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
              <a style="margin-left: 0.5em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
            </th>
            {{/if}}          
            {{#if controller.showComponent}}
            <th>Component
              <a style="margin-left: 0.75em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
              <a style="margin-left: 0.5em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
            </th>
            {{/if}}
            {{#if controller.showEffective}}
            <th>Effective
              <a style="margin-left: 0.75em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
              <a style="margin-left: 0.5em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-numeric-desc"></span></a>
            </th>
            {{/if}}
            {{#if controller.showModule}}
            <th>Module
              <a style="margin-left: 0.75em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
              <a style="margin-left: 0.5em; font-size: 0.8em" href="#" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
            </th>
            {{/if}}
            <!--th class="show-changes icon">
              <a href="show-changes.html"><span data-tooltip data-options="disable_for_touch:false" class="round fa fa-puzzle-piece" title="Pending Changes"></span></a>                  
            </th-->
            
            <th></th>
            <th></th>
            <!--th></th-->
            <!--th class="take-snapshot icon"><a href="new.snapshot.html"><span data-tooltip data-options="disable_for_touch:false" class="round fa fa-leaf" title="Create Version"></span></a></th-->
          </tr>
        </thead>
        <tbody>
          {{#each member in members}}
            
              <tr>
                {{#if controller.showIdentifier}}
                <td>
                    {{member.publicId}}
                </td>
                {{/if}}
                {{#if controller.showComponent}}
                <td>
                  <a href="https://browser.snomedtools.com/version/1/concept/285326004" target="_blank">{{member.component.title}}</a>
                </td>
                {{/if}}
                {{#if controller.showEffective}}
                <td>{{date-format member.effective}}</td>
                {{/if}}
                {{#if controller.showModule}}
                <td>
                  <a href="https://browser.snomedtools.com/version/1/concept/285326004" target="_blank">{{member.module.title}}</a>
                </td>
                {{/if}}
                <td class="info">
                  <a href="membership.details.html" class="icon"><span class="fa fa-info-circle"></span></a>
                </td>                
                <!--td class="edit">
                  <a href="edit.membership.html" class="icon"><span class="fa fa-pencil"></span></a>
                </td-->
                <td class="delete">
                  <a href="#" class="icon" {{action 'delete' member}}><span class="fa fa-trash-o"></span></a>
                  <!--a href="#" onclick="$('#alert1').show()" class="icon"><span class="fa fa-trash-o"></span></a-->
                </td>
              </tr>
            
          {{/each}}

        </tbody>
      </table>
    </div> <!-- columns -->
  </div><!-- row -->
  <div class="row">
    <!-- PAGINATION -->
    <div class="small-12 columns">
      <div class="pagination-centered">
        <ul class="pagination">
          <li class="arrow unavailable"><a href="">&laquo;</a></li>
          <li class="current"><a href="">1</a></li>
          <li><a href="">2</a></li>
          <li><a href="">3</a></li>
          <li><a href="">4</a></li>
          <li><a href="">5</a></li>
          <li class="unavailable"><a href="">&hellip;</a></li>
          <li><a href="">12</a></li>
          <li><a href="">13</a></li>
          <li><a href="">14</a></li>
          <li><a href="">15</a></li>
          <li class="arrow"><a href="">&raquo;</a></li>
        </ul>
      </div>            
    </div>
  </div>
</section>