<ol class="breadcrumb">
  <li>{{#link-to 'refsets'}}Refsets{{/link-to}}</li>
  <li class="active">{{title}}</li>
</ol>

{{search-box action="selected" modalid=findConceptModalId}}

<section class="inputs">
  <form class="form-group" {{action 'save' on="submit"}}>
    <div {{bind-attr class=":form-group :concept error.fieldErrors.concept:has-error"}}>
      <label>Concept</label>
      <button data-toggle="modal" {{bind-attr href=hashedFindConceptModalId}} {{bind-attr class=":btn :btn-default :btn-sm concept:has-concept"}}>Find Concept</button>
      <div class="title">{{conceptDisplayName}}</div>
      {{#each e in error.fieldErrors.concept }}
        <span class="help-block">{{e}}</span>
      {{/each}}
    </div>  
    <div {{bind-attr class=":form-group error.fieldErrors.title:has-error"}}>
      <label>Title</label>
      {{input type="text" name="title" class="form-control" value=title placeholder="Enter Title"}}
       {{#each e in error.fieldErrors.title }}
        <span class="help-block">{{e}}</span>
      {{/each}}
    </div>
    <div {{bind-attr class=":form-group error.fieldErrors.description:has-error"}}>
      <label>Description</label>
      {{input type="text" name="description" class="form-control" value=description placeholder="Enter Description"}}
      {{#each e in error.fieldErrors.description }}
        <span class="help-block">{{e}}</span>
      {{/each}}
    </div>
    <div {{bind-attr class=":form-group error.fieldErrors.publicId:has-error"}}>
      <label>Public ID</label>
      {{input type="text" name="publicId" class="form-control" value=publicId placeholder="Enter Public ID"}}
      {{#each e in error.fieldErrors.publicId }}
        <span class="help-block">{{e}}</span>
      {{/each}}
    </div>    
    <div class="form-group">
      <button type="submit" class="btn btn-default">Create Refset</button>
      {{#link-to 'refsets'}}<button class="btn btn-default">Cancel</button>{{/link-to}}
    </div>    
  </form>
</section>