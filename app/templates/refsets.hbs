<section class="refsets">

  <!-- HEADING -->
  <div class="row heading">
    <div class="large-12 columns">
      <h2 class="subheader">Refsets</h2>
    </div>
  </div>
      
  {{render 'undo-alert' alert}}

  <!-- ************ -->
  <!--  NAVIGATION  -->
  <!-- ************ --> 

  <div class="row navigation">
    
    <!-- ORGANISATION -->
    <div class="organisation small-6 medium-4 columns">
      <select class="dropdown" disabled>
        <option value="0" selected>Organisation (coming soon)</option>
        <!--option value="1">International Organisation for Standards</option>
        <option value="2">Health Level 7</option-->
      </select>
    </div>
    
    <!-- FILTER -->
    <div class="filter small-6 medium-4 columns">
      <input type="text" placeholder="Filter (coming soon)"></input>
    </div>
  </div>


  <!-- ******* -->
  <!--  TABLE  -->
  <!-- ******* -->
  <div class="row">
    <div class="large-12 columns">
      <table width="100%" cellpadding="0" cellspacing="0" class="responsive">
        
        <!-- HEADER -->
        <thead>
          <th class="title">Title
            <a {{action 'sort' 'title' 'ASC'}} style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
            <a {{action 'sort' 'title' 'DESC'}} style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
          </th>
          <th class="created">Created
            <a {{action 'sort' 'creationTime' 'ASC'}} style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
            <a {{action 'sort' 'creationTime' 'DESC'}} style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-numeric-desc"></span></a></
          </th>
          <!--th class="members">Members
            <a style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
            <a style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-numeric-desc"></span></a></th-->
          <th class="action"></th>
        </thead>
        
        <!-- BODY -->
        <tbody>
          {{#each refset in controller}}
            <tr>
              <td class="title">
                <div class="tooltip2 arrow">
                  {{#link-to 'members' refset}}{{refset.title}}{{/link-to}}              
                  <span class="popup">{{refset.description}}</span> 
                </div>
              </td>
              <td>{{date-format refset.created}}</td>
              <td class="delete">
                <a href="#" {{action "delete" refset}} class="icon"><span class="fa fa-trash-o"></span></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- ************ -->
  <!--  PAGINATION  -->
  <!-- ************ -->      
  <div class="row pagination">
    <div class="small-12 columns">
      <div class="pagination-centered" style="color: lightgrey">
        <span>Coming Soon: Multiple pages, and navigation</span>
        <!--ul class="pagination">
          <li class="arrow unavailable"><a href="">&laquo;</a></li>
          <li class="current"><a href="javascript;">1</a></li>
          <li><a href="javascript:void(0)" style="pointer-events: none">2</a></li>
          <li><a href="javascript:void(0)">3</a></li>
          <li><a href="javascript;">4</a></li>
          <li class="unavailable"><a href="javascript;">&hellip;</a></li>
          <li><a href="javascript;">12</a></li>
          <li><a href="javascript;">13</a></li>
          <li class="arrow"><a href="javascript;">&raquo;</a></li>
        </ul-->
      </div>            
    </div>
  </div>

  <!-- ACTION -->
  <div class="row action main">
    <div class="small-12 columns">
      {{#link-to 'create'}}<button class="button small radius">Create Refset</button>{{/link-to}}
    </div>
  </div>
  
</section>