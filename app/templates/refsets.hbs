<section class="refsets">

  <!-- HEADING -->
  <div class="row heading">
    <div class="large-12 columns">
      <h2 class="subheader">Refsets</h2>
    </div>
  </div>
      
  {{render 'undo-alert' alert}}

  <!-- ************ -->
  <!--  NAVIGATION  -->
  <!-- ************ --> 

  <div class="row navigation">
    
    <!-- ORGANISATION -->
    <div class="organisation small-6 medium-4 columns">
      <select class="dropdown" disabled>
        <option value="0" selected>Organisation (coming soon)</option>
        <!--option value="1">International Organisation for Standards</option>
        <option value="2">Health Level 7</option-->
      </select>
    </div>
    
    <!-- FILTER -->
    <div class="filter small-6 medium-4 columns">
      {{input type="text" name="filter" value=filter placeholder="Filter"}}
    </div>
  </div>


  <!-- ******* -->
  <!--  TABLE  -->
  <!-- ******* -->
  <div class="row">
    <div class="large-12 columns">
      <table width="100%" cellpadding="0" cellspacing="0" class="responsive">
        
        <!-- HEADER -->
        <thead>
          <th class="title">Title
            <a {{action 'sort' 'title' 'ASC'}} style="margin-left: 0.75em" href="javascript:void(0)" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
            <a {{action 'sort' 'title' 'DESC'}} style="margin-left: 0.5em" href="javascript:void(0)" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
          </th>
          <th class="created">Created
            <a {{action 'sort' 'creationTime' 'ASC'}} style="margin-left: 0.75em" href="javascript:void(0)" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
            <a {{action 'sort' 'creationTime' 'DESC'}} style="margin-left: 0.5em" href="javascript:void(0)" class="icon"><span class="fa fa-sort-numeric-desc"></span></a></
          </th>
          <!--th class="members">Members
            <a style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
            <a style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-numeric-desc"></span></a></th-->
          <th class="action"></th>
        </thead>
        
        <!-- BODY -->
        <tbody>
          {{#each refset in refsets}}
            <tr>
              <td class="title">
                <div class="tooltip2 arrow">
                  {{#link-to 'members' refset}}{{refset.title}}{{/link-to}}              
                  <span class="popup">{{refset.description}}</span> 
                </div>
              </td>
              <td>{{date-format refset.created}}</td>
              <td class="delete">
                <a href="#" {{action "delete" refset}} class="icon"><span class="fa fa-trash-o"></span></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <div class="row pagination">
    <!-- PAGINATION -->
    <div class="small-12 columns">
      <div class="pagination-centered" style="color: lightgrey">
        {{pagination-component resetPagesSwitch=resetPagesSwitch changePage="changePage" displaySetSize=displaySetSize totalMembers=totalSize pageSize=pageSize}}
      </div>            
    </div>
  </div>

  <!-- ACTION -->
  {{#ifAllowed 'refset:create'}}
    <div class="row action main">
      <div class="small-12 columns">
        {{#link-to 'create'}}<button class="button small radius">Create Refset</button>{{/link-to}}
      </div>
    </div>
  {{/ifAllowed}}  
</section>