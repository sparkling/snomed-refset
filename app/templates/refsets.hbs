<section class="refsets">

  <!-- HEADING -->
  <div class="row heading">
    <div class="large-12 columns">
      <h2 class="subheader">Refsets</h2>
    </div>
  </div>
      
  <!-- ********* -->
  <!-- * ALERT * -->
  <!-- ********* -->
  <div class="row">
  
    <!-- DELETE ALERT -->
    <div class="small-12 columns">
      <div data-alert id="alert1" class="alert-box warning radius" style="display: none">
        Member with component "Glial Cell (cell)" has been removed 
        <span class="actions">
          <a href="#" onclick="$('#alert1').hide()" class="icon undo"><span data-tooltip data-options="disable_for_touch:false" title="Undo" class="fa fa-undo"></span></a>
          <a href="#" onclick="$('#alert1').hide()" class="icon close-alert"><span data-tooltip data-options="disable_for_touch:false" title="Accept" class="fa fa-check"></span></a>
        </span>
      </div>
    </div>
  </div>

  <!-- ************ -->
  <!--  NAVIGATION  -->
  <!-- ************ --> 

  <div class="row navigation">
    
    <!-- ORGANISATION -->
    <div class="organisation small-6 medium-4 columns">
      <select class="dropdown">
        <option value="0" selected>Private</option>
        <option value="1">International Organisation for Standards</option>
        <option value="2">Health Level 7</option>
      </select>
    </div>
    
    <!-- FILTER -->
    <div class="filter small-6 medium-4 columns">
      <input type="text" placeholder="Filter"></input>
    </div>
  </div>


  <!-- ******* -->
  <!--  TABLE  -->
  <!-- ******* -->
  <div class="row">
    <div class="large-12 columns">
      <table width="100%" cellpadding="0" cellspacing="0" class="responsive">
        
        <!-- HEADER -->
        <thead>
          <th class="title">Title
            <a style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
            <a style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
          </th>
          <th class="created">Created
            <a style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
            <a style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-numeric-desc"></span></a></
          </th>
          <!--th class="members">Members
            <a style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-numeric-asc"></span></a>
            <a style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-numeric-desc"></span></a></th-->
          <th class="action"></th>
        </thead>
        
        <!-- BODY -->
        <tbody>
          {{#each refset in controller}}
            <tr>
              <td class="title">
                <div class="tooltip2 arrow">
                  {{#link-to 'members' refset}}{{refset.title}}{{/link-to}}              
                  <span class="popup">{{refset.description}}</span> 
                </div>
              </td>
              <td>{{date-format refset.created}}</td>
              <td class="delete">
                <!-- {{action "deleteRefset" refset}} -->
                <a href="#"  onclick="$('#alert1').show()" class="icon"><span class="fa fa-trash-o"></span></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- ************ -->
  <!--  PAGINATION  -->
  <!-- ************ -->      
  <div class="row pagination">
    <div class="small-12 columns">
      <div class="pagination-centered">
        <ul class="pagination">
          <li class="arrow unavailable"><a href="">&laquo;</a></li>
          <li class="current"><a href="">1</a></li>
          <li><a href="">2</a></li>
          <li><a href="">3</a></li>
          <li><a href="">4</a></li>
          <li class="unavailable"><a href="">&hellip;</a></li>
          <li><a href="">12</a></li>
          <li><a href="">13</a></li>
          <li class="arrow"><a href="">&raquo;</a></li>
        </ul>
      </div>            
    </div>
  </div>

  <!-- ACTION -->
  <div class="row action main">
    <div class="small-12 columns">
      {{#link-to 'create'}}<button class="button small radius">Create Refset</button>{{/link-to}}
    </div>
  </div>
  
</section>