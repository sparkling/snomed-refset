  {{#if hasContent}}
    <div class="row selected">
      <div class="large-12 columns">
        <!--  TABLE  -->
        <table width="100%" cellpadding="0" cellspacing="0" class="responsive">
          <!-- HEADER -->
          <thead>
            <th class="title">Title
              <a style="margin-left: 0.75em" href="#" class="icon"><span class="fa fa-sort-alpha-asc"></span></a>
              <a style="margin-left: 0.5em" href="#" class="icon"><span class="fa fa-sort-alpha-desc"></span></a>
            </th>
            <th class="action"></th>
          </thead>
          <!-- BODY -->
          <tbody>
            {{#each component in model}}
              <tr>
                <td class="title">
                  <a href="javascript:void(0)">{{component.title}}</a>
                </td>
                <td class="delete">
                  <a href="javascript:void(0)" {{action "delete" component}} class="icon"><span class="fa fa-trash-o"></span></a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div><!-- columns -->
    </div><!-- row -->
  {{/if}}
