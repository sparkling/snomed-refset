<!-- * HEADER * -->
<!-- ********** -->
<header>
  <div class="row">
    <div class="small-8 columns">
      <h1>Snomed Clinical Terms</h1>
    </div>
    <div class="small-4 columns login">
      {{#if loggedIn}}
        Logged in as {{user.firstName}} {{user.lastName}}
        <a href="javascript:void(0)" {{action 'logout'}} class="icon"><span class="fa fa-sign-out"></span></a>
      {{/if}}
    </div>
  </div>
</header>

