<!-- IMPORT SUCCESS MODAL -->
<div id="importSuccessModal" class="reveal-modal tiny" data-reveal>
  <div class="row">
    <div class="large-12 columns">
      <h4 class="subheader">Import Successfully completed</h4>
    </div>
  </div>
  <div class="row action main bottom">
    <div class="small-12 columns">
      <button {{action 'cancelImportSuccessModal'}} type="submit" class="button radius tiny">OK</button>
    </div>
  </div>
</div>

