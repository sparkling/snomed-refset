{{#modal-box modalid="snapshot"}}
  <form class="form-group" {{action 'snapit' on="submit"}}>
    <div class="modal-header">
      <h4>Publish 
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </h4>
    </div>
    <div class="modal-body">
      <section class="inputs">
        <div {{bind-attr class=":form-group error.fieldErrors.title:has-error"}}>
          <label>Title</label>
          {{input type="text" name="title" class="form-control" value=snapshot.title placeholder="Enter Title"}}
           {{#each e in error.fieldErrors.title }}
            <span class="help-block">{{e}}</span>
          {{/each}}
        </div>
        <div {{bind-attr class=":form-group error.fieldErrors.description:has-error"}}>
          <label>Description</label>
          {{input type="text" name="description" class="form-control" value=snapshot.description placeholder="Enter Description"}}
          {{#each e in error.fieldErrors.description }}
            <span class="help-block">{{e}}</span>
          {{/each}}
        </div>
        <div {{bind-attr class=":form-group error.fieldErrors.publicId:has-error"}}>
          <label>Public ID</label>
          {{input type="text" name="publicId" class="form-control" value=snapshot.publicId placeholder="Enter Public ID"}}
          {{#each e in error.fieldErrors.publicId }}
            <span class="help-block">{{e}}</span>
          {{/each}}
        </div>
      </section>
    </div>
    <div class="modal-footer">
      <div class="form-group">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Create</button>
      </div> 
    </div>  
  </form>
{{/modal-box}}

<section class="concepts clearfix">
  <h4 class="clearfix"><span class="title">Concepts</span>
    <div class="plan-actions clearfix">
      {{#link-to 'plan.show'}}<button class="toggle btn edit-plan btn-sm btn-default">View</button>{{/link-to}}
      {{#link-to 'plan.edit'}}<button class="toggle btn edit-plan btn-sm btn-default">Edit</button>{{/link-to}}
      {{#link-to 'plan.concepts'}}<button class="last toggle btn btn-sm btn-default" disabled="disabled">Results</button>{{/link-to}}
    </div>
  </h4>

  
  <table class="table table-striped clearfix">
    <thead>
      <th class="title">Title</th>
      <th class="id">Snomed Id</th>
      <th class="effectiveOn">Effective on</th>
    <thead>
    <tbody class="">
      {{#each concept in controller}}
      <tr>
        <td class="title">
          {{concept-link concept}}
        </td>
        <td class="id">{{concept.id}}</td>
        <td class="effectiveOn">{{date-format concept.effectiveTime}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <button type="button" data-toggle="modal" href="#snapshot" class="publish btn action btn-sm btn-success">Publish</button>  
</section>