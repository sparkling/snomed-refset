{{#if loggedIn}}
  <p>You are already logged in!</p>
{{else}}
  <form class="form-inline" {{action login on="submit"}}>
    <div class="row" style="margin-top: 1em">
      <div class="columns">
        <h3>Please log in </h3>
        <span style="font-size: 0.75em; color: grey">You may use: bob / Sn0m3dDefPass</span>
      </div>
    </div>
    <div class="row" >
      <div class="small-6 medium-5 large-4 columns">
        <div class="row field">
          <div class="small-12 columns">      
            {{input value=username type="text" placeholder="Username"}}
            {{input value=password type="password" placeholder="Password"}}
            {{#if loading}}
              <span class="loading">Logging you in...</span>
            {{/if}}
            <span>{{loadingMessage}}</span>
            <span class="error" style="height: 0.75em">{{errorMessage}}</span>
          </div>
        </div>
        <div class="row field">
          <div class="small-12 columns">
            {{input class="button tiny round" type="submit" value="Log In"}}
          </div>
        </div>
      </div>
    </div>
  </form>
{{/if}}